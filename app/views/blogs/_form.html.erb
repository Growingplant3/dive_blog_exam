<% if @blog.errors.any? %>
  <div class="blog-form">
    <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @blog, local: true, url: choice_root) do |f| %>
  <div class="blog-form">
    <ul>
      <li>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </li>
      <li>
        <%= f.label :body %>
        <%= f.text_area :body, maxlength: "140", class: "form-body" %>
      </li>
      <li>
        <%= f.label :author %>
        <%= f.text_field :author %>
      </li>
    </ul>
    <% if action_name == "new" || action_name == "create" || action_name == "confirm" %>
      <%= f.submit "登録する" %>
    <% elsif action_name == "edit" || action_name == "update" %>
      <%= f.submit "編集する" %>
    <% end %>
    <br>
    <%= link_to "一覧表示に戻る", blogs_path %>
  </div>
<% end %>